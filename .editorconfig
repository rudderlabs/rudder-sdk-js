; top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
max_line_length = 100
# Force Unix-style newlines with a newline ending every file & trim trailing whitespace
end_of_line = LF
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[{*.yaml, *.yml}]
indent_size = 2

[*.json]
indent_size = 2
