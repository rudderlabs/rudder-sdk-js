{
  "version": "independent",
  "npmClient": "npm",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": ["v3-staging", "v3-release/*", "v3-hotfix-release/*", "develop", "chore/*"],
      "message": "chore(release): bump up package versions [skip ci]",
      "conventionalCommits": true
    },
    "publish": {
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__mocks__/**",
        "**/__tests__/**",
        "public",
        "tsconfig.*",
        "*.config.*",
        "*.md",
        "*.example",
        ".npmrc",
        ".nvmrc"
      ],
      "conventionalCommits": true,
      "yes": true,
      "message": "chore(release): publish new package versions [skip ci]"
    }
  },
  "packages": ["packages/*"]
}
