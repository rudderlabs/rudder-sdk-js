{
  "name": "@rudderstack/analytics-js-loading-scripts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/loading-scripts/src",
  "projectType": "library",
  "tags": ["type:app", "scope:snippet"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/loading-scripts/jest.config.mjs",
        "passWithNoTests": true,
        "codeCoverage": false,
        "watchAll": false,
        "forceExit": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "hasTypeAwareRules": true,
        "lintFilePatterns": [
          "packages/loading-scripts/src/**/*.{ts,js}",
          "packages/loading-scripts/{package,project}.json"
        ]
      },
      "configurations": {
        "ci": {
          "force": true,
          "outputFile": "packages/loading-scripts/reports/eslint.json",
          "format": "json"
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "preset": "conventional",
        "tagPrefix": "{projectName}@",
        "trackDeps": true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "@rudderstack/analytics-js-loading-scripts@3.0.23",
        "title": "@rudderstack/analytics-js-loading-scripts@3.0.23",
        "discussion-category": "@rudderstack/analytics-js-loading-scripts@3.0.23",
        "notesFile": "./packages/loading-scripts/CHANGELOG_LATEST.md"
      }
    }
  }
}
