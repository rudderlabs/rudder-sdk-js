{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": false,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "types": ["jest", "node"]
