{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "noEmit": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.mjs",
    "__tests__/**/*.ts",
    "__mocks__/**/*.ts",
    "__fixtures__/**/*.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts"
  ]
}
