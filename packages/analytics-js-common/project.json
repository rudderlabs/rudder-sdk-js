{
  "name": "@rudderstack/analytics-js-common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/analytics-js-common/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "options": {
        "script": "build"
      }
    },
    "build-npm": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:npm"
      }
    },
    "build-npm-modern": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:npm:modern"
      }
    },
    "build-package": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:package"
      }
    },
    "build-check-size": {
      "executor": "nx:run-script",
      "options": {
        "script": "build:package"
      },
      "dependsOn": ["build"]
    },
    "clean": {
      "executor": "nx:run-script",
      "options": {
        "script": "clean"
      }
    },
    "pack": {
      "executor": "nx:run-script",
      "options": {
        "script": "package"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/analytics-js-common/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true,
        "watchAll": false,
        "forceExit": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "preset": "conventional",
        "tagPrefix": "{projectName}@"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "@rudderstack/analytics-js-common@3.0.0-beta.6",
        "notesFile": "./packages/analytics-js-common/CHANGELOG_LATEST.md"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "tag": "beta",
        "access": "public"
      }
    }
  }
}
